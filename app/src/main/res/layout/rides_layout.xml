<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="166dp">


            <TextView
                android:layout_marginTop="15dp"
                android:layout_marginLeft="60dp"
                android:id="@+id/from"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="from" />

            <TextView
                android:id="@+id/fromTime"
                android:text="Nov 25 , 2019"
                android:textSize="14sp"
                android:layout_below="@+id/from"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/to"
                android:text="to"
                android:layout_marginTop="25sp"
                android:textSize="20sp"
                android:layout_marginLeft="60dp"
                android:layout_below="@+id/fromTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/toTime"
                android:text="Nov 31 , 2019"
                android:textSize="14sp"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/to"
                android:layout_marginLeft="60dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/total"
                android:text="total"
                android:layout_toRightOf="@+id/from"
                android:layout_marginLeft="210dp"
                android:textSize="22sp"
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/currency"
                android:textSize="35dp"
                android:text="$ 16"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/total"
                android:layout_marginLeft="286dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/travelTime"
                android:layout_below="@+id/currency"
                android:layout_marginLeft="200dp"
                android:layout_marginTop="15dp"
                android:text=" Travel Time :"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/travelTimeMin"
                android:text="1hr 15min"
                android:textSize="14sp"
                android:layout_marginLeft="3dp"
                android:layout_below="@+id/currency"
                android:layout_toRightOf="@+id/travelTime"
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>



</LinearLayout>